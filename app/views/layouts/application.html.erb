<!DOCTYPE html>
<html>
  <head>
    <title>ShopPL</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">ShopPL</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="#">Start <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Polityka prywatności</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Regulamin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Dostawa i płatności</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">O sklepie</a>
          </li>
        </ul>
      </div>
    </nav>

    
    <div class="container-fluid mt-2">
      <div class="row">
        <div class="col-md-2">
        <h3> Kategorie </h3>
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <% (1..9).each do |category| %>
              <a class="nav-link" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true"><%= "Kategoria#{category}" %></a>
            <% end %>
          </div>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>


  </body>
</html>
